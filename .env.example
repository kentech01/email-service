# SendGrid API Key (or AWS SES keys if you switch)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES keys (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region

# Your verified sending email (agency email)
FROM_EMAIL=no-reply@example.co

# reCAPTCHA secret key (from Google)
RECAPTCHA_SECRET=your_recaptcha_secret_key_here

# Email provider choice: sendgrid or ses
EMAIL_PROVIDER=sendgrid

# Allowed origins for CORS, comma separated (for production)
ALLOWED_ORIGINS=http://localhost:5500,http://localhost:8000,https://client1.com,https://client2.com
